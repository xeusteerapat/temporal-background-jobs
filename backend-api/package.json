    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.5",
    "@types/nodemailer": "^6.4.16",
